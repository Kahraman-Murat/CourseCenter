@model List<ResultCourseCategoryDto>

@{
    ViewData["Title"] = "Kurslarımız Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--? Hero Start -->
<div class="slider-area ">
    <div class="slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 text-center">
                        <h2>Kurslarımız</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- all-course Start -->
<section class="all-course section-padding30">
    <div class="container">
        <div class="row">
            <div class="all-course-wrapper">
                <!-- Heading & Nav Button -->
                <div class="row mb-15">
                    <div class="col-lg-12">
                        <div class="properties__button mb-90">
                            <!--Nav Button  -->
                            <nav>
                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                    <a class="nav-item nav-link @(ViewBag.Category == 0 ? "active" : "")" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Tümü</a>
                                    @foreach (var ctg in Model)
                                    {
                                        <a class="nav-item nav-link @(ViewBag.Category == ctg.Id ? "active" : "")" id="nav-@ctg.Name.Replace(" ","-")-tab" data-toggle="tab" href="#nav-@ctg.Name.Replace(" ","-")" role="tab" aria-controls="nav-@ctg.Name.Replace(" ","-")" aria-selected="false">@ctg.Name.Replace(" ", "-")</a>
                                    }
                                </div>
                            </nav>
                            <!--End Nav Button  -->
                        </div>
                    </div>
                </div>
                <!-- Tab content -->
                <div class="row">
                    <div class="col-12">
                        <!-- Nav Card -->
                        <div class="tab-content" id="nav-tabContent">
                            <!--  one -->
                            <div class="tab-pane fade @(ViewBag.Category == 0 ? "show active" : "")" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                <div class="row">
                                    @foreach (var category in Model)
                                    {
                                        foreach (var course in category.Courses)
                                        {
                                            <div class="col-xl-4 col-lg-4 col-md-6">
                                                <!-- Single course -->
                                                <div class="single-course mb-70">
                                                    <div class="course-img">
                                                        <img src="@course.ImageUrl" alt="">
                                                    </div>
                                                    <div class="course-caption">
                                                        <div class="course-cap-top">
                                                            <h4><a href="#">@course.Name</a></h4>
                                                        </div>
                                                        <div class="course-cap-mid d-flex justify-content-between">
                                                            <div class="course-ratting">
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                            </div>
                                                            <ul><li>52 Review</li></ul>
                                                        </div>
                                                        <div class="course-cap-bottom d-flex justify-content-between">
                                                            <ul>
                                                                <li><i class="ti-user"></i> 562</li>
                                                                <li><i class="ti-heart"></i> 562</li>
                                                            </ul>
                                                            <span>@course.Preis €</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                            <!--  Two -->
                            @foreach (var ctg in Model)
                            {
                                <div class="tab-pane fade @(ViewBag.Category == ctg.Id ? "show active" : "")" id="nav-@ctg.Name.Replace(" ","-")" role="tabpanel" aria-labelledby="nav-@ctg.Name.Replace(" ","-")-tab">
                                    <div class="row">
                                        @foreach (var category in Model)
                                        {
                                            if (ctg.Id == category.Id)
                                            {
                                                foreach (var course in category.Courses)
                                                {
                                                    <div class="col-xl-4 col-lg-4 col-md-6">
                                                        <!-- Single course -->
                                                        <div class="single-course mb-70">
                                                            <div class="course-img">
                                                                <img src="@course.ImageUrl" alt="">
                                                            </div>
                                                            <div class="course-caption">
                                                                <div class="course-cap-top">
                                                                    <h4><a href="#">@course.Name</a></h4>
                                                                </div>
                                                                <div class="course-cap-mid d-flex justify-content-between">
                                                                    <div class="course-ratting">
                                                                        <i class="fas fa-star"></i>
                                                                        <i class="fas fa-star"></i>
                                                                        <i class="fas fa-star"></i>
                                                                        <i class="fas fa-star"></i>
                                                                        <i class="fas fa-star"></i>
                                                                    </div>
                                                                    <ul><li>52 Review</li></ul>
                                                                </div>
                                                                <div class="course-cap-bottom d-flex justify-content-between">
                                                                    <ul>
                                                                        <li><i class="ti-user"></i> 562</li>
                                                                        <li><i class="ti-heart"></i> 562</li>
                                                                    </ul>
                                                                    <span>@course.Preis €</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- End Nav Card -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- all-course End -->
