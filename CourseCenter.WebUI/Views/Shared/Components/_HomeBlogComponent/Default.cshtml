@model List<ResultBlogDto>


<div class="home-blog-area section-padding30">
    <div class="container">
        <!-- Section Tittle -->
        <div class="row">
            <div class="col-lg-12">
                <div class="section-tittle text-center mb-50">
                    <span>Son Yazılan Bloglarımız</span>
                    <h2>Bloglara Göz Atın</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-6 col-lg-6 col-md-6">
                    <div class="home-blog-single mb-30">
                        <div class="blog-img-cap">
                            <div class="blog-img">
                                <img src="@item.ImageUrl" alt="" style="width:575px; height:345px;">
                                <!-- Blog date -->
                                <div class="blog-date text-center">
                                    <span>@item.CreatedDate.ToString("dd")</span>
                                    <p>@item.CreatedDate.ToString("MMM")</p>
                                </div>
                            </div>
                            <div class="blog-cap">
                                <p>|   @item.BlogCategory.Name</p>
                                <h3><a href="/Blog/Detail/@item.Id">@item.Title</a></h3>
                                <a href="/Blog/Detail/@item.Id" class="more-btn">Devamını Oku »</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>

