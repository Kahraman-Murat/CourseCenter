@model List<ResultContactDto>
@{
    ViewData["Title"] = "Iletisim Bilgileri Sayfasi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Email Adresi</th>
        <th>Telefon</th>
        <th>Adres</th>
        <th>Harita Url</th>
        <th>islemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.Address</td>
            <td><a href="@item.MapUrl" target="_blank">Harita Göster</a></td>
            <td>
                <button onclick="DeleteRecord('/Admin/Contact/DeleteContact/@item.Id')" class="btn btn-outline-danger">Sil</button>
                <a asp-action="UpdateContact" asp-controller="Contact" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>

            </td>
        </tr>
    }
</table>
<br />
<a asp-action="CreateContact" asp-controller="Contact" asp-area="Admin" class="btn btn-outline-primary">Yeni Iletisim Bilgisi Ekle</a>


