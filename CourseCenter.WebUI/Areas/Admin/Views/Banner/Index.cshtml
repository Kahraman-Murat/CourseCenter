@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Banner Sayfasi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Baslik</th>
        <th>Resim</th>
        <th>islemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
            <td>
                <button onclick="DeleteRecord('/Admin/Banner/DeleteBanner/@item.Id')" class="btn btn-outline-danger">Sil</button>
                <a asp-action="UpdateBanner" asp-controller="Banner" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>

            </td>
        </tr>
    }
</table>
<br />
<a asp-action="CreateBanner" asp-controller="Banner" asp-area="Admin" class="btn btn-outline-primary">Yeni Banner Ekle</a>


