@model List<ResultRoleDto>
@{
    ViewData["Title"] = "Roller Sayfasi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Rol Adi</th>
        <th>islemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>
                <button onclick="DeleteRecord('/Admin/Role/DeleteRole/@item.Id')" class="btn btn-outline-danger">Kullanımdan Çıkar</button>

                @* <a asp-action="UpdateRole" asp-controller="Role" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a> *@

            </td>
        </tr>
    }
</table>
<br />
<a asp-action="CreateRole" asp-controller="Role" asp-area="Admin" class="btn btn-outline-primary">Rol Etkinleştir</a>
