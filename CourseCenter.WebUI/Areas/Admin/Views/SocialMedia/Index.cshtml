@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Sosyal Medya Linkleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Icon</th>
        <th>Sosyal Medya</th>
        <th>islemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><i class="@item.Icon fa-2x"></i></td>
            <td><a href="@item.Url" target="_blank" />@item.Title</td>
            <td>
                <button onclick="DeleteRecord('/Admin/SocialMedia/DeleteSocialMedia/@item.Id')" class="btn btn-outline-danger">Sil</button>
                <a asp-action="UpdateSocialMedia" asp-controller="SocialMedia" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>

            </td>
        </tr>
    }
</table>
<br />
<a asp-action="CreateSocialMedia" asp-controller="SocialMedia" asp-area="Admin" class="btn btn-outline-primary">Yeni Sosyal Medya Ekle</a>

