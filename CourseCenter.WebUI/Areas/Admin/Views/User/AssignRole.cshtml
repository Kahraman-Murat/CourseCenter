@model ResultUserRolesDto
@{
    ViewData["Title"] = "Kullanici Rolleri Atama Sayfasi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <br />
    <h5>@Model.FullName</h5>
    <h7>Kullanici Rolleri Durumu</h7>
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="FullName" />
    <br />
    @for (int i = 0; i < Model.RoleStateDtos.Count; i++)
    {      
        <div style="margin:10px;">

            <input type="hidden" asp-for="RoleStateDtos[i].RoleId" />
            <input type="hidden" asp-for="RoleStateDtos[i].RoleName" />
            <input type="checkbox" asp-for="RoleStateDtos[i].RoleExist" />
                <label class="custom-control-label" for="RoleStateDtos[i].RoleExist">@Model.RoleStateDtos[i].RoleName</label>
        </div>
    }
    <br />

    <button class="btn btn-outline-primary">Secilen Rolleri Ata</button>
    <a asp-action="Index" asp-controller="User" asp-area="Admin" class="btn btn-outline-info">Kullanicilar Sayfasina Dön</a>
</form>


