@model List<ResultMessageDto>
@{
    ViewData["Title"] = "Mesajlar Sayfasi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Gönderen Adi</th>
        <th>Email Adresi</th>
        <th>Konu</th>
        <th>islemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.EmailDate.ToShortDateString()</td>
            <td>@item.EmailDate.ToShortTimeString()</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>
                <button onclick="DeleteRecord('/Admin/Message/DeleteMessage/@item.Id')" class="btn btn-outline-danger">Sil</button>

                <a asp-action="MessageDetail" asp-controller="Message" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-info">Mesaj Ac</a>

            </td>
        </tr>
    }
</table>
<br />


